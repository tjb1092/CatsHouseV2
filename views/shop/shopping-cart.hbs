<div class="container">
  {{#if products}}
    <div class="row">
      <div class="col-sm-6 col-md-6 col-md-offset-3 com-sm-offset-3">
        <ul class="list-group">
          {{# each products}}
           <li class="list-group-item">
            <strong>{{ this.item.title }}</strong>
            <span class="badge badge-primary">{{ this.qty}}</span>
            <span class="label label-success">${{ this.price }}</span>
            <div class="dropdown pull-right">
              <button class="btn btn-primary dropdown-toggle" type="button" id="dropdownMenuButton" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                Action
              </button>
              <div class="dropdown-menu" aria-labelledby="dropdownMenuButton">
                <a class="dropdown-item" href="#">Reduce by 1</a>
                <a class="dropdown-item" href="#">Remove All</a>
              </div>
            </div>

           </li>
          {{/each}}
        </ul>
      </div>
    </div>

    <div class="row">
      <div class="col-sm-6 col-md-6 col-md-offset-3 com-sm-offset-3">
        <strong>Total: ${{ totalPrice }}</strong>
      </div>

    </div>
    <hr>
    <div class="row">
      <div class="col-sm-6 col-md-6 col-md-offset-3 com-sm-offset-3">
        <a href="/products/checkout" class="btn btn-success" type="button">Checkout</a>
      </div>
    </div>

  {{else}}

    <div class="row">
      <div class="col-sm-6 col-md-6 col-md-offset-3 com-sm-offset-3">
        <h2>No Items in Cart</h2>
      </div>
    </div>

  {{/if}}


</div>
